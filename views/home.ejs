<%- include('partials/header'); -%>

<h1>Home</h1>
<p><%=startingContent%></p>


<% posts.forEach(function(post) { %>
  <h1><%=post.title%></h1>

  <%let contentForHome = post.content; %>
  <%if (contentForHome.length > 100) { %>
  <%  contentForHome = post.content.substring(0,100) + " ..."; %>
  <%} %>

  <p>
    <%=contentForHome%>
    <a href="./posts/<%=post.title%>">Read More</a>
  </p>

<% }); %>

<%- include('partials/footer'); -%>
